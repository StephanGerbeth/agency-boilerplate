{
  "build": {
    "dest": "build",
    "root": "./build",
    "dev": false
  },
  "development": {
    "host": "localhost",
    "dest": "dev",
    "root": "./",
    "dev": true,
    "hapi": {
      "options": {
        "port": 8050,
        "secret": "UNSAFE: CHANGE ME"
      },
      "routes": "<%= root %>/env/config/hapi/routes"
    },
    "webpack": {
      "entry": {
        "app": ["./src/js/main","webpack-hot-middleware/client?path=/__webpack_hmr&timeout=20000&reload=true"]
      },
      "output": {
        "path": "/dev/js",
        "filename": "[name].js",
        "publicPath": "/dev/js",
        "library": ["[name]"]
      }
    },
    "livereload": {
      "port": 8053
    }
  },

  "production": {
    "host": "localhost",
    "dest": "production",
    "root": "./production",
    "dev": false,
    "hapi": {
      "options": {
        "port": 8050,
        "secret": "UNSAFE: CHANGE ME"
      },
      "routes": "<%= root %>/env/config/hapi/routes"
    }
  }
}
